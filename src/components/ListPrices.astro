---
import Foods from '@components/Foods.astro'
import Categories from '@components/Categories.astro'
---

<section 
  class="grid grid-cols-1 lg:grid-cols-3 gap-x-8 gap-y-4 mx-auto border-3 rounded-lg px-6 py-4 backdrop-blur-2xl backdrop-brightness-95"
>
  <div class="flex flex-col col-span-2">
    <Categories category="Principal" className="row-span-1" divClassName="grid gap-2">
      <Foods name="Pizza a la italiana 🍕" price={11} className='col-span-2' isSpecial />
      <Foods name="Hamburguesa mortal 🍔" price={25} />
      <Foods name="Mega tacos gigantes 🌮" price={15} />
      <Foods name="Pollo al horno 🐔" price={20} />
      <Foods name="Pizza sin TACC 🍕" price={5} />
    </Categories>
    <Categories category='Bebidas' className='col-span-2 row-end-2 row-start-2 mt-4' divClassName="grid grid-cols-2 gap-x-4">
      <Foods name="Coca Cola 🥤" price={13} />
      <Foods name="Fanta 🥤" price={13} className=""/>	
      <Foods name="Sprite 🥤" price={13} />
      <Foods name="Cerveza Artesanal 🍺​" price={20} />
    </Categories>
  </div>
  <div class="flex flex-col gap-y-6 col-span-2">
    <Categories category="Cosas del mar">
      <Foods name="Camarones 🦐" price={20} /> 
      <Foods name="Rabas 🦑" price={25} />
    </Categories>    
    <Categories category="Acompañamientos" className="col-start-3 row-start-1">
      <Foods name="Ensalada Rusa 🥗" price={13} />
      <Foods name="Ensalada cuidadora de caderas 🥗" price={30}/>	
    </Categories>
  </div>
</section>
